<h2 align="center">Listing all users</h2>

<%= link_to "Create a new user", new_user_path %>

<% @users.each do |user| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to user.username, user_path(user) %>
        </div>
        
        <div class="article-body">
          <%= truncate(user.email, length: 100) %>
          <div class="article-meta-details">
<!--             <small>Created by: <%= article.user.username if article.user %>,
                              <%= time_ago_in_words(article.created_at) %> ago,
                              last updated: <%= time_ago_in_words(article.updated_at) %> ago
            </small> -->
          </div>
                        
        </div>
        <div class="article-actions">
        <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this user", user_path(@user), method: :delete,
                                            data: {confirm: "Are you sure you want to delete this user ?"}, 
                                            class: "btn btn-xs btn-danger" %>
        <%= link_to "View all users", users_path, class: "btn btn-xs btn-success" %>
    </div>
      </div>
    </div>
  </div>
<% end %>